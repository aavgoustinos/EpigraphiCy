# --------------------------------------------------------------------
# Django Configuration
# --------------------------------------------------------------------

# Generate a random secret key for local use:
# python -c "import secrets; print(secrets.token_urlsafe(50))"
DJANGO_SECRET_KEY=replace-this-with-your-own-secret-key

# Development options
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# --------------------------------------------------------------------
# Database Configuration
# --------------------------------------------------------------------
# By default the app uses SQLite (no configuration needed)
# You can override with a database URL (example below):
# DATABASE_URL=postgres://username:password@localhost:5432/dbname

# --------------------------------------------------------------------
# Optional Cloud Storage (if you use S3-compatible service)
# --------------------------------------------------------------------
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=
AWS_S3_ENDPOINT_URL=

# --------------------------------------------------------------------
# Email (optional)
# --------------------------------------------------------------------
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your@email.com
# EMAIL_HOST_PASSWORD=yourpassword
